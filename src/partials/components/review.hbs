{{#with review}}
    <blockquote cite="url-to-car-page" class="m-0 w-[calc(100vw-40px)] sm:w-full lg:max-w-[474px] pt-2 pb-4 pr-2 sm:pl-2 sm:pl-4 sm:pr-3.5 md:p-4 md:pr-5 md:pb-6 lg:p-4 lg:pb-8 bg-text-white rounded shadow-theme-grey flex items-start gap-1.5 sm:gap-[18px] md:gap-7">
        <div class="flex-none w-28 md:w-32 -ml-1 sm:ml-0 pl-1 sm:pl-0">
            <div class="relative h-[71px] w-[71px] sm:h-24 sm:w-24 md:w-32 md:h-32 mx-auto">
                <!-- User Avatar -->
                <img src="src/img/review.jpeg" class="w-full h-full object-cover rounded-full" alt="">

                <!-- Button Play Video -->
                <a href="#" class="absolute inset-0 bg-text-black group bg-opacity-40 rounded-full z-10">
                    <span class="icon-arrow-right text-2xl md:text-3xl text-red-core group-hover:text-red-hover absolute left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/3 z-20"></span>
                </a><!-- END Button Play Video -->

                <div class="btn-sm block w-max mx-auto absolute -bottom-1 sm:bottom-0 md:bottom-1.5 left-1/2 -translate-x-1/2 px-1.5 py-0.5 md:px-4 text-xs md:text-[13px] font-light z-20">відео-відгук</div>
            </div>
            <div class="text-center mt-1.5 sm:mt-1 md:mt-2">
                <h3 class="h3">{{car}}</h3>
                <p class="text-text-enable">{{city}}</p>
            </div>
        </div>
        <div>
            <h3 class="h3">{{author}}</h3>
            <q class="before:content-none after:content-none mt-2.5 sm:mt-3 md:mt-1">{{content}}</q>
        </div>
    </blockquote>
{{/with}}
