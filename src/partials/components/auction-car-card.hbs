{{#with car}}
    <div class="bg-text-white shadow-theme-grey rounded-md overflow-hidden grid grid-cols-1 sm:grid-cols-2 md:grid-cols-9 lg:grid-cols-none lg:flex">
        <div class="relative lg:flex-none md:col-span-4 md:row-start-1 md:row-end-3 lg:row-end-auto lg:w-60 xl:w-80 2xl:w-96">
            <a href="/auto.html" class="block relative flex-none h-48 w-full sm:h-full overflow-hidden">
                <img src="src/img/{{img}}" class="absolute top-1/2 -translate-y-1/2 w-full h-full sm:rounded-l-md object-cover">
            </a>
            <div class="absolute top-0 left-0 p-2 flex flex-col gap-3 bg-black bg-opacity-40 rounded-br">
                <button type="button" class="text-white opacity-80 hover:opacity-100">
                    <span class="icon-heart text-2xl"></span>
                </button>
                <button type="button" class="text-white opacity-80 hover:opacity-100">
                    <span class="icon-femida text-2xl"></span>
                </button>
            </div>
        </div>
        <div class="md:col-span-5 lg:flex-1 lg:w-72 p-3 pb-4 sm:px-5 sm:pt-2 sm:pb-3 md:p-3.5 md:pt-2 lg:pl-2.5 lg:pr-1 lg:py-2 xl:pt-2.5 xl:px-5 xl:pb-4 2xl:p-6 2xl:pt-4 border-b-2 lg:border-b-0 lg:border-r-2 border-grey-light">
            <a href="/auto.html" class="block h2 sm:truncate">{{name}}</a>
            <div class="mt-2.5 sm:mt-5 md:mt-3 lg:mt-4 grid grid-cols-2 xs:grid-cols-3 sm:grid-cols-2 2xl:grid-cols-3 gap-3 sm:gap-y-2 2xl:gap-3">
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-calendar text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>2017</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-gas-station text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>Гібрид</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-engine text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>1.6 л</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-transmission text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>Автомат</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-car-drive text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>Передній</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="flex-none icon-body-car text-[22px] md:text-2xl text-grey-dark"></span>
                    <span>Седан</span>
                </div>
                <div class="col-span-full md:col-span-1 lg:col-span-full flex items-center gap-2">
                    <span class="flex-none icon-damages text-[22px] md:text-2xl text-grey-dark"></span>
                    <span class="truncate">Заводиться і не їде</span>
                </div>
                <div class="col-span-full md:col-span-1 lg:col-span-full flex items-center gap-2">
                    <span class="flex-none icon-vin text-[22px] md:text-2xl text-grey-dark"></span>
                    <span class="truncate">З5992GD4684321FE</span>
                </div>
            </div>
        </div>
        <div class="sm:col-span-full md:col-span-5 lg:w-52 xl:w-64 2xl:w-72 px-3 pt-2 pb-6 sm:py-3 md:pt-1 lg:p-2 lg:pt-4 xl:px-8 2xl:pt-3 2xl:px-12 lg:flex flex-col">
            <div class="flex flex-col gap-1 sm:flex-row lg:flex-col sm:gap-3 md:gap-2.5 lg:gap-3.5 xl:gap-3 items-center">
                <p class="sm:w-full text-center">Аукціон через 15 днів</p>
                <div class="sm:w-full flex items-center justify-center md:flex-col gap-2.5 md:gap-0 text-text-enable">
                    <p class="md:font-bold">Орієнтовна ставка:</p>
                    <h2 class="h2 text-text-black">$ 16 568</h2>
                </div>
            </div>
            <div class="mt-4 sm:mt-3.5 md:mt-1 lg:mt-auto xl:mt-6 flex flex-col sm:flex-row lg:flex-col xl:max-w-sm gap-3 md:gap-2.5 lg:gap-2">
                <a href="#" class="btn-shadow-sm sm:w-full xl:w-48"><span data-content="Зробити ставку">Зробити ставку</span></a>
                <a href="#" class="btn-sm sm:w-full xl:w-48"><span data-content="Детальніше">Детальніше</span></a>
            </div>
        </div>
    </div>
{{/with}}